# ===========================================
# SistiGym - Variables de Entorno
# ===========================================

# Base de datos PostgreSQL
# Formato: postgresql://usuario:password@host:puerto/base_de_datos
DATABASE_URL="postgresql://postgres:password@localhost:5432/sistigym"

# Secreto para firmar cookies de sesion
# Genera uno seguro para produccion con: openssl rand -hex 32
SESSION_SECRET="cambia-esto-por-un-valor-seguro-de-al-menos-32-caracteres"

# Entorno de ejecucion
# Valores: development | production
NODE_ENV="development"

# Puerto del servidor (opcional, default: 3000)
# PORT=3000
